{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": "error",
        "quotes": [2, "single"],
        "comma-dangle": ["error", {
            "arrays": "never",
            "objects": "never",
            "imports": "never",
            "exports": "never",
            "functions": "ignore"
        }]
    },
    "globals": {
        "fetch": false,
        "after": true,
        "afterEach": true,
        "before": true,
        "beforeEach": true,
        "context": true,
        "describe": true,
        "it": true
    }    
}